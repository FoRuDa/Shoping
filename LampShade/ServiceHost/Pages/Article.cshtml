@page "{id}"
@model ServiceHost.Pages.ArticleModel
@{
    ViewData["Title"] = @Model.Article.Title;//h1 page
    ViewData["keywords"] = @Model.Article.Keywords;
    ViewData["metaDescription"] = @Model.Article.MetaDescription;
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title">@Model.Article.Title</h1>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="/Index">صفحه اصلی</a>
                            </li>
                            
                            <li class="active">@Model.Article.Title </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">

                            <div class="col-lg-9 order-1 order-lg-1">
                                <div class="blog-page-content">

                                    <div class="blog-single-post-container">



                                        <h2 class="post-title">@Model.Article.Title</h2>

                                        <div class="post-meta">
                                            <p>
                                                 <span><i class="fa fa-calendar"></i> تاریخ انتشار: <a href="#">@Model.Article.PublishedDate</a></span>
                                            </p>
                                        </div>


                                        <div class="single-blog-post-media">
                                            <div class="image">
                                                <img src="~/ProductPicture/@Model.Article.Picture" class="img-fluid" alt="@Model.Article.PictureAlt" title="@Model.Article.PictureTitle">
                                            </div>
                                        </div>

                                        <div class="post-content">
                                            @Html.Raw(Model.Article.Description)
                                        </div>


                                        <div class="tag-area">
                                            <span>تگ ها: </span>
                                            <ul>
                                                @foreach (var item in Model.Article.KeywordList)
                                                {
                                                    <li><a asp-page="/Search" asp-route-value="@item">@item</a>,</li>
                                                }


                                            </ul>
                                        </div>


                                        <div class="social-share-buttons">
                                            <h3>share this post</h3>
                                            <ul>
                                                <li>
                                                    <a class="twitter" href="#">
                                                        <i class="fa fa-twitter"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="facebook" href="#">
                                                        <i class="fa fa-facebook"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="google-plus" href="#">
                                                        <i class="fa fa-google-plus"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="pinterest" href="#">
                                                        <i class="fa fa-pinterest"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>


                                    <div class="comment-section">
                                        <h3 class="comment-counter">(@Model.Article.Comments.Count) نظرات</h3>


                                        <div class="comment-container">

                                            @*<div class="single-comment reply-comment">
                                                <span class="reply-btn">
                                                    <a href="#"></a>
                                                </span>

                                                <div class="image">
                                                    <img src="~/Theme/assets/img/blog/comment-icon.png" alt="">
                                                </div>
                                                <div class="content">
                                                    <h3 class="user">
                                                        admin <span class="comment-time">
                                                            April 28, 2019
                                                            at 3:09 am
                                                        </span>
                                                    </h3>
                                                    <p class="comment-text">
                                                        Lorem ipsum dolor sit amet consectetur
                                                        adipisicing elit. Sint quia rem dolorem et rerum est
                                                        laudantium eum dolores omnis perspiciatis.
                                                    </p>
                                                </div>

                                            </div>*@

                                            @foreach (var comment in Model.Article.Comments)
                                            {
                                                <div class="single-comment">
                                                    <span class="reply-btn">
                                                        <a href="#postComment"  onclick='$("#commentPatentId").val(@comment.Id)'>پاسخ</a>
                                                    </span>

                                                    <div class="image">
                                                        <img src="~/Theme/assets/img/blog/comment-icon.png" alt="">
                                                    </div>
                                                    <div class="content">
                                                        <h3 class="user">
                                                            @comment.Name <span class="comment-time"> @comment.CreationDate </span>
                                                        </h3>

                                                        <p class="comment-text">@comment.Message</p>
                                                    </div>

                                                </div>
                                            }
                                            


                                           


                                        </div>

                                        <div class="comment-form-container">
                                            <h3 class="comment-form-title">نظر خود را با ما به اشتراک بگذارید  </h3>
                                            <p>
                                                ایمیل وارد شده از طرف شما به صورت محرمانه است و به دیگران نمایش داده  نخواهد شد.
                                                *
                                            </p>

                                            <div class="comment-form" id="postComment">
                                                <form method="post">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label>نظر شما</label>
                                                                <textarea name="message" placeholder="نظر خود را بنویسید."id="message"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>نام <span class="required">*</span></label>
                                                                <input type="text" name="name" placeholder="مثال:فرود احمدی">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>ایمیل <span class="required">*</span></label>
                                                                <input type="text" name="email" placeholder="مثال:aforud@gmail.com">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>وبسایت</label>
                                                                <input type="text" name="website" placeholder="مثال:www.forud.com">
                                                            </div>
                                                        </div>
                                                        <input type="hidden" name="OwnerRecordId" value="@Model.Article.Id" />
                                                        <input type="hidden" name="articleSlug" value="@Model.Article.Slug" />
                                                        <input type="hidden" name="ParentId" id="commentPatentId" value="" />
                                                        <div class="col-lg-12">
                                                            <button type="submit" class="comment-btn" name="submit">
                                                                ارسال
                                                            </button>

                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                    </div>


                                </div>
                            </div>
                            <div class="col-lg-3 order-2 order-lg-2">
                                <div class="page-sidebar-wrapper">
                                    <div class="single-sidebar-widget">

                                        <h4 class="single-sidebar-widget__title">گروه مقالات</h4>
                                        <ul class="single-sidebar-widget__category-list">
                                          @foreach (var articleCategory in Model.ArticleCategories)
                                          {
                                              
                                              <li >
                                                  <a asp-page="/ArtilceCategory" asp-route-id="@articleCategory.Slug" class="active">
                                                      @articleCategory.Name <span class="counter">@articleCategory.ArticleCount</span>
                                                  </a>
                                              </li>
                                          }

                                        </ul>
                                    </div>

                                    <div class="single-sidebar-widget">

                                        <h4 class="single-sidebar-widget__title"> آخرین مقالات</h4>
                                        <div class="block-container">
                                            @foreach (var article in Model.LatestArticles)
                                            {
                                                <div class="single-block d-flex">
                                                    <div class="image">
                                                        <a asp-page="/article" asp-route-id="@article.Slug">
                                                            <img src="~/ProductPicture/@article.Picture"
                                                                 class="img-fluid" alt="@article.PictureAlt" title="@article.PictureTitle">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <a asp-page="/article" asp-route-id="@article.Slug">
                                                                @article.Title
                                                            </a> <span>@article.PublishedDate</span>
                                                        </p>
                                                    </div>
                                                </div>
                                            }
                                         


                                        </div>

                                    </div>
                                    
                                    <div class="single-sidebar-widget">
                                        <h4 class="single-sidebar-widget__title">  تگ ها</h4>
                                        <ul class="single-sidebar-widget__tag-list">
                                            @foreach (var tag in Model.Article.KeywordList)
                                            {
                                                <li>
                                                    <a asp-page="/Search" asp-route-value="@tag"> @tag</a>
                                                </li>
                                            }
                                           


                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>